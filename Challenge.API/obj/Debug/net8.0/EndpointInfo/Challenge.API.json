{
  "openapi": "3.0.1",
  "info": {
    "title": "Challenge.API",
    "version": "1.0"
  },
  "paths": {
    "/DriverActivities": {
      "get": {
        "tags": [
          "DriverActivities"
        ],
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DriverResponse"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DriverResponse"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DriverResponse"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DriverActivityResponse": {
        "type": "object",
        "properties": {
          "type": {
            "$ref": "#/components/schemas/DriverActivityType"
          },
          "durationInMinutes": {
            "type": "integer",
            "format": "int32"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "DriverActivityType": {
        "enum": [
          "Drive",
          "Rest",
          "Work",
          "Available"
        ],
        "type": "string"
      },
      "DriverResponse": {
        "required": [
          "forename",
          "surname"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "forename": {
            "type": "string",
            "nullable": true
          },
          "surname": {
            "type": "string",
            "nullable": true
          },
          "fullName": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "shifts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DriverShiftResponse"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DriverShiftResponse": {
        "required": [
          "vehicleRegistration"
        ],
        "type": "object",
        "properties": {
          "vehicleRegistration": {
            "type": "string",
            "nullable": true
          },
          "activities": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DriverActivityResponse"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}